@model CinemaForYou.Models.ShowEditorViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Modification de la séance</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Show.Id" />
            <div class="form-group">
                <label asp-for="Show.Date" class="control-label"></label>
                <input asp-for="Show.Date" value="@(new DateTime(Model.Show.Date.Year, Model.Show.Date.Month, Model.Show.Date.Day))" class="form-control" />
                <span asp-validation-for="Show.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Show.Heure" class="control-label"></label>
                <select asp-for="Show.Heure" asp-items="@Model.AvailableHours" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <input type="hidden" asp-for="Show.MovieId" value="@Model.Show.MovieId"/>
            <input type="hidden" asp-for="Show.ImplantationId" value="@Model.Show.ImplantationId"/>
            <input type="hidden" asp-for="Show.RoomId" value="@Model.Show.RoomId"/>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
