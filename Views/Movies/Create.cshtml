@model CinemaForYou.Models.MovieCreatorViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Création d'un film</h1>

<hr />
<div class="row  justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Movie.Title" class="control-label"></label>
                <input asp-for="@Model.Movie.Title" class="form-control" />
                <span asp-validation-for="@Model.Movie.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Movie.Description" class="control-label"></label>
                <input asp-for="@Model.Movie.Description" class="form-control"/>
                <span asp-validation-for="@Model.Movie.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Movie.ReleaseDate" class="control-label"></label>
                <input asp-for="@Model.Movie.ReleaseDate" class="form-control" />
                <span asp-validation-for="@Model.Movie.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Movie.Duration" class="control-label"></label>
                <input asp-for="@Model.Movie.Duration" class="form-control" />
                <span asp-validation-for="@Model.Movie.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Movie.PegiId" class="control-label"></label>
                <select asp-for="@Model.Movie.PegiId" class="form-control" asp-items="@Model.Pegis"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Movie.MovieTypeId" class="control-label"></label>
                <select asp-for="@Model.Movie.MovieTypeId" class="form-control" asp-items="@Model.Types"></select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Image.ImageFile" class="control-label"></label>
                <br/>
                <input asp-for="@Model.Image.ImageFile" class="form-control-file" accept="image/*" />
                <span asp-validation-for="@Model.Image.ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
